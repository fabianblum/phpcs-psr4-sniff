{
    "name": "suin/phpcs-psr4-sniff",
    "type": "phpcodesniffer-standard",
    "description": "PHP_CodeSniffer sniff that checks class name matches PSR-4 project structure.",
    "keywords": [
        "coding-standards",
        "coding-style",
        "namespace",
        "php-codesniffer",
        "phpcs",
        "psr-4",
        "static-analysis"
    ],
    "homepage": "https://github.com/bitwise-operators/phpcs-psr4-sniff/",
    "license": "MIT",
    "authors": [
        {
            "name": "suin",
            "email": "suinyeze@gmail.com",
            "homepage": "https://github.com/suin",
            "role": "Original developer"
        },
		{
            "name": "B.J.Scharp",
            "homepage": "https://github.com/bitwise-operators",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/bitwise-operators/phpcs-psr4-sniff/issues"
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "slevomat/coding-standard": ">=4.7 <9.0.0",
        "squizlabs/php_codesniffer": ">=3.3 <4.0.0"
    },
    "autoload": {
        "psr-4": {
            "Suin\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Suin\\Sniffs\\Classes\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
